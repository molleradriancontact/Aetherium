
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Aetherium application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "username": {
          "type": "string",
          "description": "The username of the user, unique across the platform."
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the user's profile picture.",
          "format": "uri"
        },
        "registrationDate": {
          "type": "string",
          "description": "Date and time the user registered.",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "email",
        "username",
        "registrationDate"
      ]
    },
    "ArchitectProject": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ArchitectProject",
      "type": "object",
      "description": "Represents a single analysis or chat project for a user in Aetherium.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the project."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns this project."
        },
        "name": {
          "type": "string",
          "description": "Name of the project."
        },
        "createdAt": {
          "type": "string",
          "description": "Date and time the project was created.",
          "format": "date-time"
        },
        "isPublic": {
          "type": "boolean",
          "description": "Determines if the project is visible to all users."
        },
        "projectType": {
          "type": "string",
          "description": "The type of project, either 'analysis' or 'chat'.",
          "enum": ["analysis", "chat"]
        },
        "analysisReport": {
          "type": "string",
          "description": "The full content of the analysis report for 'analysis' projects."
        },
        "frontendSuggestions": {
          "type": "object",
          "properties": {
            "suggestedChanges": { "type": "string" },
            "reasoning": { "type": "string" }
          }
        },
        "backendSuggestions": {
          "type": "object",
          "properties": {
            "suggestedChanges": { "type": "string" },
            "reasoning": { "type": "string" }
          }
        },
        "history": {
          "type": "array",
          "items": {
            "$ref": "#/entities/HistoryItem"
          }
        },
        "uploadedFiles": {
            "type": "array",
            "description": "A list of files uploaded by the user for 'analysis' projects.",
            "items": {
                "$ref": "#/entities/UploadedFile"
            }
        },
        "chatHistory": {
          "type": "array",
          "description": "The message history for 'chat' projects.",
          "items": {
            "$ref": "#/entities/ChatMessage"
          }
        },
        "collaborators": {
            "type": "array",
            "description": "A list of user IDs who are collaborating on this project.",
            "items": {
                "type": "string"
            }
        },
        "collaboratorDetails": {
          "type": "array",
          "description": "An array of objects containing details about each collaborator.",
          "items": {
            "$ref": "#/entities/Collaborator"
          }
        }
      },
      "required": [
        "id",
        "userId",
        "name",
        "createdAt",
        "projectType"
      ]
    },
    "Invitation": {
      "title": "Invitation",
      "type": "object",
      "description": "Represents an invitation for a user to collaborate on a project.",
      "properties": {
        "id": { "type": "string" },
        "projectId": { "type": "string" },
        "projectName": { "type": "string" },
        "invitedByUserId": { "type": "string" },
        "invitedByUsername": { "type": "string" },
        "invitedUserEmail": { "type": "string", "format": "email" },
        "status": { "type": "string", "enum": ["pending", "accepted", "declined"] },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "projectId", "projectName", "invitedByUserId", "invitedByUsername", "invitedUserEmail", "status", "createdAt"]
    },
    "HistoryItem": {
      "title": "HistoryItem",
      "type": "object",
      "description": "A single entry in the project's history log.",
      "properties": {
        "id": {
          "type": "number"
        },
        "message": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "message", "timestamp"]
    },
    "UploadedFile": {
      "title": "UploadedFile",
      "type": "object",
      "description": "Represents a single file uploaded by the user.",
      "properties": {
        "path": {
          "type": "string",
          "description": "The full path of the uploaded file."
        },
        "content": {
          "type": "string",
          "description": "The content of the file, encoded as a data URI."
        }
      },
      "required": ["path", "content"]
    },
    "ChatMessage": {
      "title": "ChatMessage",
      "type": "object",
      "description": "Represents a single message in a chat conversation.",
      "properties": {
        "role": {
          "type": "string",
          "enum": ["user", "model"],
          "description": "The role of the message sender."
        },
        "content": {
          "type": "string",
          "description": "The content of the message."
        }
      },
      "required": ["role", "content"]
    },
    "Collaborator": {
      "title": "Collaborator",
      "type": "object",
      "description": "Represents a collaborator on a project.",
      "properties": {
        "id": {
          "type": "string",
          "description": "The unique ID of the collaborator."
        },
        "email": {
          "type": "string",
          "description": "The email of the collaborator.",
          "format": "email"
        },
        "username": {
          "type": "string",
          "description": "The username of the collaborator."
        },
        "photoURL": {
          "type": "string",
          "description": "The URL of the collaborator's profile picture.",
          "format": "uri"
        }
      },
      "required": ["id", "email", "username"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profile information."
    },
    "/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/ArchitectProject"
      },
      "description": "Stores all public projects."
    },
    "/users/{userId}/projects/{projectId}": {
      "schema": {
        "$ref": "#/entities/ArchitectProject"
      },
      "description": "Stores the private analysis and chat projects for each user."
    },
    "/users/{userId}/invitations/{invitationId}": {
      "schema": {
        "$ref": "#/entities/Invitation"
      },
      "description": "Stores pending project invitations for a user."
    }
  }
}
